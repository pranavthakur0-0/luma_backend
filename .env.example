# Application
PORT=8000
NODE_ENV=production

# MongoDB
MONGODB_URL=mongodb://localhost:27017/ai_mail

# Google OAuth (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-backend-url.com/auth/callback

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# JWT
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRES_IN=7d

# Frontend
FRONTEND_URL=https://luma-mail.netlify.app

# Google Cloud Pub/Sub (for real-time email notifications)
PUBSUB_TOPIC_NAME=projects/YOUR_PROJECT_ID/topics/gmail-notifications

# Backend Public URL (for Pub/Sub webhooks)
# ============================================
# DEV:  Use ngrok URL (run: ngrok http 8000)
# PROD: Use your deployed backend URL
BACKEND_URL=https://your-backend-url.com
